{
  "name": "student-site-boilerplate",
  "description": "A modern boilerplate for static website development, based on https://staticsiteboilerplate.com/",
  "version": "1.1.0",
  "homepage": "https://github.com/ProfessorKolodziej/student-site-boilerplate",
  "author": {
    "name": "Ashley Kolodziej",
    "url": "https://ashleykolodziej.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorKolodziej/student-site-boilerplate.git"
  },
  "license": "MIT",
  "keywords": [
    "html5",
    "css3",
    "es6",
    "frontend",
    "sass",
    "less",
    "static",
    "boilerplate",
    "webpack"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config ./config/webpack.config.js",
    "start:dist": "cross-env NODE_ENV=production webpack-dev-server --config ./config/webpack.config.js && http-server ./dist -o",
    "lint:html": "html-validate --config .htmlvalidate.json \"src\"",
    "lint:js": "./node_modules/.bin/eslint \"src/**/*.js\"",
    "lint:styles": "stylelint \"src/**/*.scss\"",
    "lint": "npm run lint:html && npm run lint:styles && npm run lint:js",
    "fix": "./node_modules/.bin/eslint --fix \"src/**/*.js\" && stylelint --fix \"src/**/*.scss\"",
    "build": "cross-env NODE_ENV=production webpack --config ./config/webpack.config.js",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.0",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.2.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-loader": "^2.2.1",
    "eslint-plugin-import": "^2.18.2",
    "favicons": "^6.2.2",
    "favicons-webpack-plugin": "^5.0.2",
    "file-loader": "^4.2.0",
    "gh-pages": "^3.1.0",
    "glob": "^7.1.4",
    "html-loader": "^0.5.5",
    "html-validate": "^3.4.1",
    "html-webpack-plugin": "^5.3.2",
    "http-server": "^0.12.3",
    "image-webpack-loader": "^5.0.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "postcss-sass": "^0.4.1",
    "sass-loader": "^7.2.0",
    "style-loader": "^1.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-scss": "^3.20.1",
    "stylelint-webpack-plugin": "^3.0.1",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0",
    "webpack-merge": "^5.8.0",
    "webpackbar": "^5.0.0-3"
  },
  "dependencies": {
    "normalize.css": "^8.0.1",
    "webpack-dev-server": "^4.0.0"
  }
}
